{
  "name": "@tm2js/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.14.2",
  "exports": {
    ".": {
      "import": "./dist/canvas-editor.js",
      "require": "./dist/canvas-editor.umd.cjs"
    }
  },
  "main": "./dist/canvas-editor.umd.cjs",
  "module": "./dist/canvas-editor.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">18.0.0 || >=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nanoid": "^5.0.6",
    "vue": "^3.4.19",
    "@vueuse/core": "^10.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@tm2js/eslint-config": "^0.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.19",
    "@vue/test-utils": "^2.4.4",
    "@vue/compiler-sfc" : "^3.4.19",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "@tm2js/canvas-editor": "workspace:*"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "playground/**/__tests__/**/*.ts": [
      "eslint --cache --fix"
    ]
  }
}
